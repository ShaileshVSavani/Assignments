import { LOGIN, LOGOUT, SIGNUP } from "./ActionType"

const initialState = {
    users: [],
    user: {},
    isLoggedIn: false
}

export const userReducer = (state = initialState, { type, payload }) => { 
    switch (type) { 
        case SIGNUP:
            return { ...state, users: { ...state.users, payload }, isLoggedIn: true }
        case LOGOUT:
            return { ...state, users: {}, isLoggedIn: false }
        default:
            return state

    }
}